<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
    <title>CS411Chat</title>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script defer src="http://localhost:3000/socket.io/socket.io.js"></script>
    <script type="module" src="main.js"></script>
    </script>
  </head>
  <body>
    <h2 style="position: fixed; left: 0; top: 0; left: 30px; top: 15px;">Chatty</h2>
    <h1>Your conversations</h1>
    <div id="chats-list">
    </div>

    <form id="new-chat-form">
      <input style="width:300px;" type="text" id="new-chat-receiver" placeholder="Enter email of user">
      <br>
      <button type="submit">Start new conversation!</button>
    </form>

    <button id="logout_button" style="position: fixed; right: 0; top: 0; right: 30px; top: 30px;">Log out</button>
  </body>

  <script type="module" src="logout.js"></script>
</html>
